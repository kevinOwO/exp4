#include <iostream>
#include <conio.h>

using namespace std;

int main()
{
   
 int size, arr[5], i, j, t;

    cout << "Enter Array Size: ";
    cin >> size;

    cout << "Input Numbers: ";

    for(i = 0; i < size; i++)
    {
        cin >> arr[i];
    }

    cout << "Sorting array ";
   
 for(i = 0; i < size; i++)
    {   for(j = i + 1; j < size; j++)
        {   
if(arr[i] > arr[j])
            { 
  t = arr[i];
                arr[i] = arr [j];
                arr[j] = t; }
        }


    }   cout << " Result: ";

    for (i = 0; i < size; i++){
        cout << arr[i] << " ";
    }


    _getch();
    return 0;



}
